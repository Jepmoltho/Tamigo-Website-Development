@using tamigo_website.Helpers
@using tamigo_website.Models
@inherits Umbraco.Web.Macros.PartialViewMacroPage
@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "MasterLayout.cshtml";
}

<!-- Header section -->
<style>
    .blog-main-header{
        min-height: 300px;
        background-color: #690046;
        margin-bottom: 2rem;
    }
    
    .top-section-container{
        margin-bottom: 50px;
    }
    @@media (max-width: 990px) {
        .top-section-container {
            margin-bottom: 100px; } }
            
    .title-container{
    }
    @@media (max-width: 990px) {
        .title-container {
            margin-top: 50px; } }
    
</style>

<!-- Containers  -->
<style>
    .container-responsive {
      width: 100%;
      padding-right: 20px;
      padding-left: 20px;
      margin-right: auto;
      margin-left: auto; }
      @@media (min-width: 576px) {
        .container-responsive {
          max-width: 920px; } }
      @@media (min-width: 768px) {
        .container-responsive {
          max-width: 920px; } }
      @@media (min-width: 992px) {
        .container-responsive {
          max-width: 1140px; } }
      @@media (min-width: 1200px) {
        .container-responsive {
          max-width: 1140px; } }
</style>
<style>
        .blog-card-container{
        background-color: #FFFFFF;
        margin: 2rem;
        max-width: 300px;
        border-radius:4px 4px 4px 4px;
        position: relative;
        min-height: 400px;
        }
      @@media (max-width: 990px) {
        .blog-card-container {
            max-width: 800px; 
            border-radius:10px 10px 10px 10px; 
            min-height: 1100px;} }
        
</style>
<style>
    .flex-container {
        display: flex;
        flex-wrap: wrap;
    }
    @@media (max-width: 990px) {
        .flex-container {
            justify-content: center; } }
</style>

<!-- Blog cards -->
<style>
    .blog-card-image-container{
        height: 170px;
        overflow: hidden;
    }
    @@media (max-width: 990px) {
        .blog-card-image-container {
        height: 450px;
        overflow: hidden;
        } }

    .blog-image{
        width: 300px;
        border-radius: 4px 4px 0px 0px;
    }
    @@media (max-width: 990px) {
        .blog-image {
        min-width: 800px;
        border-radius: 10px 10px 0px 0px;
        } }
</style>

<!-- Blog cards text -->
<style>
    .bl-snip-headline{
    }
    @@media (max-width: 990px) {
        .bl-snip-headline {
        padding: 40px 40px 0px 40px !important
    } }

    .bl-snip-body{
    }
    @@media (max-width: 990px) {
        .bl-snip-body {
        padding: 40px 40px 0px 40px !important;
        font-size: 2.4rem !important;
    } }
    
    .bl-snip-link{
        position: absolute;
        bottom: 0;
        right: 0;
    }
    @@media (max-width: 990px) {
        .bl-snip-link {
        padding: 20px 40px 40px 40px !important;
        font-size: 2.5rem !important;
    } }
</style>

<style>

    #pageContent{
         background-color: #F5F5F5;
    }
    
    .read-more-link{
        text-align: right;
    }
    
    .nav-ele{
        display:inline;
        color: #646464; 
    }
    
</style>


@Umbraco.RenderMacro("Space", new {color="white", heigth="90"})


<div class="top-section-container row no-gutters bg-@Umbraco.Field("blogTopBackgroundColor") position-relative" id="Text-Image">
    <div class="container-responsive">
        <span class="tile-25 tile-right tile-bottom bg-light-@Umbraco.Field("blogTopSquareColor")"></span>
        <div class="col-lg-6 col-md-11 pt-5 pb-5 ">
            <h1 class="title text-@Umbraco.Field("blogTitleTextColor") pt-5 pl-3 pb-5 pr-5">
                <p class="title-container pt-5 pb-5">@Umbraco.Field("blogTitle")</p>
            </h1>
        </div>
    </div>
</div>

<div class="container-responsive">
    <div class="flex-container">
        
        <!-- List of blog cards get rendered here -->
        @Umbraco.Field("blogCardCarouselCards")
        
    </div>
    
    @Umbraco.RenderMacro("Space", new {color="#F5F5F5", heigth="90"})

</div>

