@inherits Umbraco.Web.Macros.PartialViewMacroPage


<style>
    .image-responsive {
    }
  @@media (min-width: 576px) {
    .image-responsive  {
     min-width: 820px;
       } }
  @@media (min-width: 768px) {
    .image-responsive  {
     min-width: 820px;
       } }
  @@media (min-width: 992px) {
    .image-responsive  {
    min-width: 300px;
      } }
  @@media (min-width: 1200px) {
    .image-responsive  {
    min-width: 300px;
     } }
</style>

<style>
    .text-container-unique{
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .img-container-unique{
     }
     @@media (max-width: 990px) {
    .img-container-unique {
    margin-top: 80px; 
    } }
</style>




<div class="backgroundcolor-container bg-@Model.MacroParameters["backgroundColor"] d-@Model.MacroParameters["visible"]">
        <div class="container-responsive pt-5 pb-5" style="">
            <div class="row" style="padding-bottom: 30px; padding-top: 30px">
                	<div class="col-lg-6 text-container-unique">
                	<div class="content-container">
                    <div class="small-title mb-3 @Model.MacroParameters["titleColor"]">@Html.Raw(Model.MacroParameters["title"])</div>
                    <div class="normal-text @Model.MacroParameters["bodyColor"]">@Html.Raw(Model.MacroParameters["subtitle"])</div>
                    <div class="button-container d-@Model.MacroParameters["buttonVisible"]"> 

                        <a class="btn btn-tamigo-small bg-@Model.MacroParameters["buttonBackgroundColor"] @Model.MacroParameters["buttonTextColor"] anchor-plain overflow-hidden mt-4 mw-100" href=@Model.MacroParameters["buttonLink"] id="btnFrontPageFreeDemo"><span class="medium-normal-text">@Model.MacroParameters["buttonText"]<i class="fa fa-long-arrow-right ml-3" aria-hidden="true"></i></span></a>
                    </div>
                    </div>
                </div>
                <div class="col-lg-6" style="margin:auto;">
                    <center>
                        <img class="img image-responsive img-container-unique" style="" src=@Umbraco.Media(Model.MacroParameters["image"]).Url ></img>
                    </center>
                </div>
            </div>
        </div>
</div>

