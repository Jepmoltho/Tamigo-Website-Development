@inherits Umbraco.Web.Macros.PartialViewMacroPage


<div class="backgroundcolor-container bg-@Model.MacroParameters["backgroundColor"] d-@Model.MacroParameters["visible"]">
    <div class="container-responsive margin-top-60 pb-5">
        <div class="row" style="padding-bottom: 30px">
            <div class="col-lg-4">
                <div class="title padding-top-150 overflow-break-word @Model.MacroParameters["titleColor"]">
                        @Html.Raw(Model.MacroParameters["title"])
                </div>
                <div class="big-normal-text pt-2 @Model.MacroParameters["bodyColor"]">
                    @Html.Raw(Model.MacroParameters["subtitle"])
                </div>
                <div class="button-container">
                     <a class="btn btn-tamigo-small bg-@Model.MacroParameters["buttonColor"] @Model.MacroParameters["buttonTextColor"] anchor-plain overflow-hidden mt-4 mb-5 mw-100" href=@Model.MacroParameters["buttonLink"] id="btnFrontPageFreeDemo"><span class="medium-normal-text">@Model.MacroParameters["buttonText"]<i class="fa fa-long-arrow-right ml-3" aria-hidden="true"></i></span></a>
                </div>
            </div>
            <div class="col-lg-8 pt-5">
                <img alt="" src=@Umbraco.Media(Model.MacroParameters["image"]).Url class="img-fluid" style="margin-top:60px;">
            </div>
        </div>
    </div>
</div>

